<%= form_for(@task, remote: true) do |f| %>
<% if @task.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

  <ul>
    <% @task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>    
<div class="col-sm-12" id="popup">
  <div class="row inputgroup">
    <%= f.text_field :url, type: "text", class: "inputfield", placeholder: 'Enter website URL, e.g. http://www.google.com', required: "true" %>
  </div>
  <div class="row inputgroup">
    <%= f.text_field :words, type: "text", class: "inputfield", placeholder: 'Keywords (separated by a semicolon)', required: "true" %>
  </div>
  <div class="row inputgroup">
    <%= f.text_field :email, type: "email", class: "inputfield", placeholder: 'Your e-mail address', value: current_user.email , readonly: true%>
  </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn button-header" data-dismiss="modal">Cancel</button>
    <%= f.submit "Create task!", :class => 'btn button-header'%>
</div>
<% end %>