<body class="purple">
        <div class="row title-text top">
      <div class="col-sm-12 text-center title">
        <span class="titlelight">Task details</span>
      </div>
    </div>
		<div class="row">
			<div class="col-md-3">
			</div>

			<div class="col-md-6">
				<div class="panel panel-default">
					<div class="panel-body">
						<p>
							<strong>Url:</strong>
							<%= @task.url %>
						</p>

						<p>
							<strong>Words:</strong>
							<%= @task.words %>
						</p>

						<p>
							<strong>Email:</strong>
							<%= @task.email %>
						</p>

						<p>
							<strong>Status:</strong>
							<%= @task.status_name %>
						</p>
						<%= link_to 'Dashboard', tasks_path,{class: "btn btn-md button-header"} %>
						<%= link_to 'Edit', edit_task_path,{class: "btn btn-md button-header"} %>
					</div>
				</div>
			</div>
		</div>
	</div>

</body>