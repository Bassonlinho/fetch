<div class="text-center" style="padding-top:80px">
  <div class="container">
    <font color="white"> 
      <h1>Sign up</h1>
    </font>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <body class="purple">

      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12 sign-form">
            <h1 class="title">Kolosek<span class="titlelight">Notify</span></h1>
            <div class="signbox">
              <div class="input-group">
                <%= f.label :email, :class=>"label"%><br />
                <%= f.email_field :email, autofocus: true,:class =>"field"%>
              </div>
              <div class="input-group">
                <%= f.label :password, :class=>"label" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off",:class =>"field" %>
              </div>
              <div class="input-group">
                <%= f.label :password_confirmation,:class=>"label" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"field" %>
              </div>
              <%= f.submit "Sign up",class: "button" %>
            </div>
            <div class="below">
              <h2 class="headline">Already have an account?</h2>
              <%= link_to "Sign in", new_user_session_path, :class=> "link" %>
            </div>
            <% end %>
          </div>

        </div>
      </div>

    </body>
